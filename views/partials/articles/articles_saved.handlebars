<div class="card mb-4 mr-5">
  <div class="card-header">
    {{title}}
  </div>

  <div class="card-body">
    <div class="media">
      <img src={{picture}} class="align-self-center mr-3" alt="...">
      <div class="media-body">
        <blockquote class="blockquote mb-0">
          <p>{{summary}}</p>
          <a type="link" href={{link}} class="btn btn-myview">View Article</a>
          <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#notes{{id}}">
            Notes
          </button>
          <button type="button" href="" class="btn btn-myview article-delete">Delete</button>
        </blockquote>
      </div>
    </div>
  </div>
</div>


<!-- Modal -->
<div class="modal fade" id="notes{{id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Article Notes</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
         <ul class="list-group">
            {{#each notes}}
            {{> notes/note-saved}}
            {{/each}}
         </ul>
          
        <form>
          <div class="form-group">
            <label for="noteForm-{{id}}"></label>
            <textarea class="form-control" id="noteForm-{{id}}" rows="3"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary article-note" data-id="{{id}}">Save Notes</button>
      </div>
    </div>
  </div>
</div>