<div class="card mb-4 mr-5">
  <div class="card-header">
    {{title}}
  </div>

  <div class="card-body">
    <div class="media">
      <img src={{picture}} class="align-self-center mr-3" alt="...">
      <div class="media-body">
        <blockquote class="blockquote mb-0">
          <p>{{summary}}</p>

          <button type="button" class="btn btn-mysave article-note" data-id={{id}}>Notes</button>
          <button type="button" href="" class="btn btn-myview article-delete">Delete</button>
        </blockquote>
      </div>
    </div>
  </div>
</div>